{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noResolve": false,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "outDir": "build",
    "allowJs": false,
    // NOTE: FIXME: This eventually needs to be set back to true
    "declaration": true,
    // NOTE: FIXME: This eventually needs to be set back to true
    "noImplicitAny": true
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}